<Page
    x:Class="CompraVentasCRUD.Views.ClientsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CompraVentasCRUD.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ClientsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <DataGrid
            x:Name="DgClients"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=rif_cliente}" Header="Rif" />
                <DataGridTextColumn Binding="{Binding Path=cedula}" Header="Cédula" />
                <DataGridTextColumn Binding="{Binding Path=nombre}" Header="Nombre" />
                <DataGridTextColumn Binding="{Binding Path=direccion}" Header="Dirección" />
                <DataGridTextColumn Binding="{Binding Path=telefono}" Header="Teléfono" />
                <DataGridTextColumn Binding="{Binding Path=status_c}" Header="Status" />
                <DataGridTextColumn Binding="{Binding Path=email}" Header="Email" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
